{
  "name": "M65Debugger",
  "version": "0.6.1",
  "description": "Live debugging tool for Mega65 hardware",
  "author": "Simon Jameson",
  "license": "",
  "private": false,
  "homepage": "",
  "engines": {
    "node": ">=9.0.0",
    "npm": ">=5.0.0",
    "yarn": ">=1.0.0"
  },
  "browserslist": [
    "last 4 versions"
  ],
  "main": "main.js",
  "scripts": {
    "prod": "cross-env NODE_ENV=production webpack --mode production --config=./webpack.build.config.js && electron --noDevServer .",
    "start": "cross-env NODE_ENV=development webpack serve --hot --host 0.0.0.0 --config=./webpack.dev.config.js --mode development",
    "build": "cross-env NODE_ENV=production webpack --config=./webpack.build.config.js --mode production",
    "dist": "node_modules/.bin/electron-rebuild -w serialport -f && npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.evolutegames.m65debugger",
    "productName": "M65 Debugger",
    "directories": {
      "output": "./builds/",
      "buildResources": "./buildResources/"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "buildDependenciesFromSource": true,
    "npmRebuild": false,
    "extraFiles": ["client.js"]
    
  },
  "dependencies": {
    "@serialport/list": "^9.2.0",
    "electron-prompt": "^1.6.2",
    "electron-store": "^8.0.0",
    "postcss": "^8.2.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hex-editor": "^0.3.0",
    "serialport": "^9.2.0",
    "styled-components": "^5.3.0",
    "ws": "^7.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "electron": "^12.0.13",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.1.1",
    "electron-packager": "^15.2.0",
    "electron-prebuilt": "^1.4.13",
    "electron-rebuild": "^2.3.5",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.3.9",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.1.0",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^6.7.0",
    "postcss-pxtorem": "^5.1.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
